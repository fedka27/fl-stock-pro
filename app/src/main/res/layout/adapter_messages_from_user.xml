<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/drawer_menu_left_padding"
    android:paddingRight="@dimen/drawer_menu_left_padding">

    <com.artjoker.core.views.ArtJokerTextView
        style="@style/WrapContentStyle"
        android:id="@+id/tv_name_user"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/font_size_6pt"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/change_pass_old_pass_bot_margin"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/tv_message_date"
        android:layout_toStartOf="@+id/tv_message_date" />

    <com.artjoker.core.views.ArtJokerTextView
        style="@style/SanSerifLight"
        android:id="@+id/tv_message_date"
        android:layout_alignBottom="@+id/tv_name_user"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/font_size_5pt"
        android:textColor="@color/date_text_color"
        android:layout_marginLeft="@dimen/drawer_menu_left_padding" />

    <com.artjoker.core.views.ArtJokerTextView
        style="@style/SanSerifLight"
        android:id="@+id/tv_message_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/message_color"
        android:singleLine="true"
        android:textSize="@dimen/font_size_5pt"
        android:layout_below="@+id/tv_name_user"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/drawer_menu_left_padding" />
</RelativeLayout>