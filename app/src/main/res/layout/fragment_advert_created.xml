<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <com.artjoker.core.views.ArtJokerTextView
            android:id="@+id/created_advert_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/advert_created_done"
            android:textSize="@dimen/font_size_6_5pt" />

        <com.artjoker.core.views.ArtJokerButton
            android:id="@+id/done_show_all_adverts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/created_advert_top_text"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/auth_buttons_background_selector"
            android:text="@string/show_all_adverts"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_6_5pt" />

        <com.artjoker.core.views.ArtJokerTextView
            android:id="@+id/created_advert_middle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/done_show_all_adverts"
            android:gravity="center"
            android:text="@string/advert_created_else"
            android:textSize="@dimen/font_size_6_5pt" />

        <com.artjoker.core.views.ArtJokerButton
            android:id="@+id/create_new_advert_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/created_advert_middle_text"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/auth_buttons_background_selector"
            android:text="@string/create_new_advert"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_6_5pt" />

        <com.artjoker.core.views.ArtJokerTextView
            android:id="@+id/created_advert_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_new_advert_done"
            android:gravity="center"
            android:text="@string/advert_created_finish"
            android:textSize="@dimen/font_size_6_5pt" />

    </RelativeLayout>
</ScrollView>