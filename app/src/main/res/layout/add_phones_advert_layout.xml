<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:id="@+id/phones_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <com.artjoker.core.views.ArtJokerTextView
            style="@style/EditTextStyle"
            android:id="@+id/tv_advert_phone"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:textSize="@dimen/font_size_6pt"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_toLeftOf="@+id/button_add_phone"
            android:layout_toStartOf="@+id/button_add_phone" />

        <ToggleButton
            style="@style/WrapContentStyle"
            android:textOff="@null"
            android:textOn="@null"
            android:id="@+id/button_add_phone"
            android:layout_marginLeft="@dimen/drawer_menu_left_padding"
            android:layout_centerVertical="true"
            android:checked="false"
            android:layout_width="@dimen/button_profile_margin"
            android:layout_height="wrap_content"
            android:button="@drawable/add_remove_selector"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

</RelativeLayout>