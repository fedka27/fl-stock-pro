<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/rating_dialog_margin">

    <com.artjoker.core.views.ArtJokerTextView
        android:id="@+id/tv_rate_dialog_title"
        style="@style/WrapContentStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/rating_dialog_margin"
        android:text="@string/rate_dialog_title"
        android:textSize="@dimen/font_size_6_5pt" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/rating_group_padding"
        android:paddingRight="@dimen/rating_group_padding">

        <RadioGroup
            android:id="@+id/rate_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <RadioButton
                android:id="@+id/rb_rate_5"
                style="@style/RatingStarRadioButtonStyle" />

            <RadioButton
                android:id="@+id/rb_rate_4"
                style="@style/RatingStarRadioButtonStyle" />

            <RadioButton
                android:id="@+id/rb_rate_3"
                style="@style/RatingStarRadioButtonStyle" />

            <RadioButton
                android:id="@+id/rb_rate_2"
                style="@style/RatingStarRadioButtonStyle" />

            <RadioButton
                android:id="@+id/rb_rate_1"
                style="@style/RatingStarRadioButtonStyle" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/rate_radio_group"
            android:layout_alignTop="@id/rate_radio_group"
            android:layout_toRightOf="@id/rate_radio_group"
            android:orientation="vertical">

            <LinearLayout style="@style/RatingStarContainerStyle">

                <ImageView style="@style/RatingStarStyle" />

                <ImageView style="@style/RatingStarStyle" />

                <ImageView style="@style/RatingStarStyle" />

                <ImageView style="@style/RatingStarStyle" />

                <ImageView style="@style/RatingStarStyle" />

            </LinearLayout>

            <LinearLayout style="@style/RatingStarContainerStyle">

                <ImageView style="@style/RatingStarStyle" />

                <ImageView style="@style/RatingStarStyle" />

                <ImageView style="@style/RatingStarStyle" />

                <ImageView style="@style/RatingStarStyle" />

            </LinearLayout>

            <LinearLayout style="@style/RatingStarContainerStyle">

                <ImageView style="@style/RatingStarStyle" />

                <ImageView style="@style/RatingStarStyle" />

                <ImageView style="@style/RatingStarStyle" />

            </LinearLayout>

            <LinearLayout style="@style/RatingStarContainerStyle">

                <ImageView style="@style/RatingStarStyle" />

                <ImageView style="@style/RatingStarStyle" />

            </LinearLayout>

            <LinearLayout style="@style/RatingStarContainerStyle">

                <ImageView style="@style/RatingStarStyle" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.artjoker.core.views.ArtJokerButton
        android:id="@+id/button_send_rating"
        style="@style/LoginButton"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/rating_dialog_margin"
        android:text="@string/rate_action" />
</LinearLayout>